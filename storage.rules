rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Product Images: Public Read, Admin Write
    match /products/{imageId} {
      allow read: if true;
      allow write: if request.auth != null; 
      // ideally check for admin claim, but for now auth is sufficient as only admins can login 
      // and we are moving towards backend-only validation. 
      // But since this is client-side upload, we need this rule.
    }
  }
}
