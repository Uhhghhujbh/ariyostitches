rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ðŸ”’ STRICT SECURITY: DENY ALL PUBLIC ACCESS
    // All data operations (Messages, Orders, Products, Layaways) 
    // are strictly handled by Vercel Serverless Functions 
    // using the Firebase Admin SDK (Service Account).
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
